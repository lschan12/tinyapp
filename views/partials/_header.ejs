<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="form-inline mt-2 mt-md-0">
        <% if(user) { %>
            <p class="navbar-brand my-2 my-sm-0">Logged in as: <%= user.email %></p>
            <form method="post" action="/logout">
              <button type="submit" class="btn-outline-danger my-2 my-sm-0">Logout</button>
            </form>
          <% } else { %>
            <div class="navbar-nav mr-auto">
              <a class="nav-item nav-link" href="/login">Login</a>
              <a class="nav-item nav-link" href="/register">Register</a>
            </div>
           <% } %>
      </div>
    </div>
  </nav>
</header>
